<%# Title: _place_order.html.erb %>
<%# Order partial page %>
<%# Author: RH %>

<a name="buyAnchor"></a>
<div class="row">
    <div class="box">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <hr>
            <h2 class="intro-text text-center">Place your
                <strong>order</strong>
            </h2>
            <hr>
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th data-field="id">Item</th>
                    <th data-field="name">Quantity</th>
                    <th data-field="name">Cost</th>
                    <th data-field="name" data-halign="center" data-align="center">Currently Available</th>
                    <th data-field="name">Buy</th>
                </tr>
                </thead>
                <%# The drinks attribute is passed in from index.html.erb using the render method %>
                <% drinks.each do |drink| %>
                   <tr>
                       <td><%= drink.number %></td>
                       <td><%= drink.displayName %></td>
                       <td><%= number_to_currency(drink.cost) %></td>
                       <td data-halign="center" data-align="center"><%= drink.inStock ? 'Yes' : 'No' %></td>
                       <%# Adding the anchor: parameter will add a # (jump to) in the redirect url that causes the page to jump to this buy section of the page %>
                       <td><%= link_to 'Buy', main_buy_path(number: drink.number, anchor: 'buyAnchor'), :class => 'buy-btn btn btn-large btn-primary', :disabled => !drink.inStock %></td>
                   </tr>
                <% end %>
            </table>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>

