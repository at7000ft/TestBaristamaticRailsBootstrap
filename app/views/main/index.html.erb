</nav>

<div class="container">

    <div class="row">
        <div class="box">
            <div class="col-lg-12 text-center">
                <div id="carousel-example-generic" class="carousel slide">
                    <!-- Indicators -->
                    <ol class="carousel-indicators hidden-xs">
                        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active">
                            <img class="img-responsive img-full" src="<%= image_path('slide-1.jpg') %>" alt="">
                        </div>
                        <div class="item">
                            <img class="img-responsive img-full" src="<%= image_path('slide-2.jpg') %>" alt="">
                        </div>
                        <div class="item">
                            <img class="img-responsive img-full" src="<%= image_path('slide-3.jpg') %>" alt="">
                        </div>
                    </div>

                    <!-- Controls -->
                    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                        <span class="icon-prev"></span>
                    </a>
                    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                        <span class="icon-next"></span>
                    </a>
                </div>
                <h2 class="brand-before">
                    <small>Welcome to</small>
                </h2>
                <h1 class="brand-name">Baristamatic</h1>
                <hr class="tagline-divider">
                <h2>
                    <small>By
                        <strong>WebPilot LLC</strong>
                    </small>
                </h2>
            </div>
        </div>
    </div>


    <%= render(partial: 'place_order', :locals => {drinks: @drinks}) %>

    <%= render(partial: 'view_inventory', :locals => {inventory: @inventory}) %>



</div>
<!-- /.container -->

<footer>
    <div class="container">
        <div class="row">
            <div class="col-sm-12 text-center">
                <p>WebPilot LLC 2014</p>
            </div>
        </div>
    </div>
</footer>



<!-- Script to Activate the Carousel -->
<script>
   $('.carousel').carousel({
      interval: 5000 //changes the speed
   })
</script>


