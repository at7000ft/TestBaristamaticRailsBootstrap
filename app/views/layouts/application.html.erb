<%# Title: application.html.erb %>
<%# Main layout page - turbolinks are turned off %>
<%# Author: RH %>

<!DOCTYPE html>
<html>
<head>
    <title>TestBaristamaticRailsBootstrap</title>
    <%= csrf_meta_tags %>

    <!-- Bootstrap Core CSS -->
    <%= stylesheet_link_tag "bootstrap.min" %>

    <!-- Custom CSS -->
    <%= stylesheet_link_tag "baristamatic" %>

    <!-- Fonts -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Josefin+Slab:100,300,400,600,700,100italic,300italic,400italic,600italic,700italic" rel="stylesheet" type="text/css">

    <!-- jQuery -->
    <%= javascript_include_tag 'jquery-1.11.2.min.js' %>

    <!-- Bootstrap Core JavaScript -->
    <%= javascript_include_tag 'bootstrap.min.js' %>
</head>
<body>
<div class="brand">Baristamatic</div>
<div class="address-bar">302 Wilcox Street | Castle Rock, CO 80104 | 123.456.7890</div>

<!-- Navigation -->
<nav class="navbar navbar-default" role="navigation">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <!-- navbar-brand is hidden on larger screens, but visible when the menu is collapsed -->
            <a class="navbar-brand" href="<%= url_for main_index_path() %>">Baristamatic</a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li>
                    <a href="<%= url_for main_index_path() %>">Home</a>
                </li>
                <li>
                    <a href="<%= url_for main_about_path() %>">About</a>
                </li>
                <li>
                    <a href="<%= url_for main_blog_path() %>">Blog</a>
                </li>
                <li>
                    <a href="<%= url_for main_contact_path() %>">Contact</a>
                </li>
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
</nav>

<%= yield %>

<footer>
    <div class="container">
        <div class="row">
            <div class="col-sm-12 text-center">
                <p>WebPilot LLC 2014</p>
            </div>
        </div>
    </div>
</footer>

</body>
</html>
